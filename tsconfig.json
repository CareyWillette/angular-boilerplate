{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@bp-app/*": ["src/app/*"],
      "@bp-env/*": ["src/environments/*"],
      "@bp-core/*": ["src/app/@core/*"],
      "@bp-theme/*": ["src/app/@theme/*"],
      "@bp-assets/*": ["src/assets/*"]
    },
  }
}
